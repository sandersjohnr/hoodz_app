<%= form_for @user do |f| %>

  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br>
  <br>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <br>
  <%= f.label 'Confirm Password' %><br>
  <%= f.password_field :password_confirmation %><br>
  <br>
  <%= f.submit %>

<% end %>
