<!DOCTYPE html>
<html>
<head>
  <title>Hoodz</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Londrina+Shadow' rel='stylesheet' type='text/css'>
</head>
<body>

<h1>Hoodz</h1>

<% if current_user %>
  <span id="welcome">
    Welcome back, <%= current_user.first_name %>! 
    <p id="logout"><%= link_to 'Log Out', sessions_path, method: :delete %> </p>
    <p id="main-menu"><%= link_to 'New York City', nyc_index_path %> </p>
  </span>
<% else %>
  <div id="login">
    <span id="signup-link" class="link"><%= link_to 'Sign Up', new_user_path %></span>
    <span id="login-link" class="link"><%= link_to 'Log In', sessions_new_path %></span>
  </div>
<% end %>

<div id="guess-ui"></div>
<div id="tool-tip"></div>
<div id="mode-menu"></div>
<div id="points"></div>

<%= yield %>

</body>
</html>
